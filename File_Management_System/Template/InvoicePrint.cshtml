@model File_Management_System.Models.Invoice

<!DOCTYPE html>
<html>
<head>
    <title>Invoice</title>
    <style>
        body { font-family: Arial, sans-serif; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f4f4f4; }
        .header { text-align: center; font-size: 24px; margin-bottom: 20px; }
        .total { text-align: right; font-weight: bold; margin-top: 20px; }
    </style>
</head>
<body>
    <div class="header">Invoice</div>
    <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
    <p><strong>Payment Mode:</strong> @Model.PaymentMode</p>

    <table>
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="total">Total Amount: @Model.TotalAmount.ToString("C")</p>
</body>
</html>
