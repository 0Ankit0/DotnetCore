@model ConcurrentDictionary<string, string>

@{
    ViewData["Title"] = "Shared Data";
}

<h1 class="text-center my-4">Shared Data</h1>
<p class="text-center">Below is the shared data managed using the Singleton Design Pattern:</p>

<div class="container">
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No data available</td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info mt-3">
            @TempData["Message"]
        </div>
    }

    <div class="text-center mt-4">
        <a href="/Home" class="btn btn-primary">Back to Home</a>
    </div>
</div>
