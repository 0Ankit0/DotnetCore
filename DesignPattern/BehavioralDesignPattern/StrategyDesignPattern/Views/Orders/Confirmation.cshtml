@model StrategyDesignPattern.Models.Order

@{
    ViewBag.Title = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path to your layout if needed
}

<div class="container mt-5">
    <h2 class="mb-4">Order Confirmation</h2>
    <div class="row">
        <div class="col-md-6">

            <!-- Order details card -->
            <div class="card mb-3">
                <div class="card-header">
                    <strong>Order Details</strong>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Order Id:</strong> @Model.Id<br />
                        <strong>Item Count:</strong> @Model.ItemCount<br />
                        <strong>Order Total:</strong> $@Model.TotalAmount
                    </p>
                </div>
            </div>

            <!-- Shipping details card -->
            <div class="card mb-3">
                <div class="card-header">
                    <strong>Shipping Information</strong>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Selected Shipping Strategy:</strong> @ViewBag.ShippingOption<br />
                        <strong>Calculated Shipping Cost:</strong> $@ViewBag.ShippingCost
                    </p>
                </div>
            </div>

            <!-- Confirmation message -->
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading">Thank you!</h5>
                <p>Your order has been successfully processed.</p>
            </div>

            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                Continue Shopping
            </a>
        </div>
    </div>
</div>
